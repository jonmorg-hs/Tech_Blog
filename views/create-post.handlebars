<section>
  <a href="/dashboard" class="is-pulled-right"> &larr; My Posts</a>
  <h2 class="title">New blog post</h2><hr />

  <form class="new-post-form">
    <div>
      <label for="post-title">title:</label>
      <input
        class="input blog"
        type="text"
        id="post-title"
        name="post-title"
        placeholder="blog title"
      />
    </div>
    <div>
      <label for="post-content">content:</label>
      <input
        class="textarea blog content"
        id="post-content"
        name="post-content"
        placeholder="blog content"
      />
    </div>
    <button
      type="submit"
      class="button is-primary is-pulled-right"
    >Post</button>
  </form>
</section>

<script src="/js/add-post.js"></script>